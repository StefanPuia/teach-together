<%-include('partial/head')%>
<%-include('partial/navbar')%>

<head>
    <script src="/static/ace-builds/src/ace.js"></script>
    <script src="/static/client.js"></script>
</head>

<style>
.forceHidden {
    display: none!important;
}

.sidebarContentView {
    width: 100%;
    height: 100%
}

.chat {
    height: calc(100vh - var(--appbar-height))!important;
}

.chat.playback {
height: calc(100vh - var(--appbar-height) - 50px)!important;
}

#chatViewToggleBadge {
    display: none;
}

.chat .message.ownerMessage .message-item .message-text {
    background: rgb(255, 255, 120);
    font-style: italic;
}

#playbackSlider {
    display: none;
    position: absolute;
    bottom: 0;
    left: 0;
    height: 5px;
    z-index: 5;
}
</style>

<div class="container-fluid">
    <div id="mainEditorBody">
        <%- include("course/partial/sideMenu") %>
        <div id="fullEditor" data-role="splitter" data-split-sizes="20, 80" data-min-sizes="350,700">
            <%- include("course/partial/sideMenuContent") %>
            <div data-role="splitter" data-split-mode="vertical" data-gutter-size="5" data-min-sizes="200" data-split-sizes="70, 30">
                <div class="d-flex flex-justify-center flex-align-center" style="position: relative">
                    <div id="playbackSlider" class="bg-cobalt"></div>
                    <div class="editor" id="teacherIDE"></div>
                </div>
                <div class="d-flex flex-justify-center flex-align-center">
                    <div id="consoleWrapper">
                    <div class="console" id="resultsConsole">Result:</div>
                    </div>
                </div>
            </div>
        </div>
        <div id="bottomControls" style="display: block; background-color: pink"></div>
    </div>
</div>

<%- include("course/partial/script") %>
<%- context.isOwner ? include("course/partial/ownerScript") : "" %>