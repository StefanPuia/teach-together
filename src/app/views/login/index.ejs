<%-include('partial/head')%>

<div class="container">
    <div class="grid text-center">
        <div class="row">
            <div class="cell-md-4 offset-md-4 offset-sm-1">
                <h1>Teach Together</h1>
            </div>
            <% if(typeof error !== "undefined") { %>
                <div class="cell-md-4 offset-md-4 offset-sm-1">
                    <div class="remark alert">
                        <%=error%>
                    </div>
                </div>
            <%}%>
        </div>
        <div class="row">
            <div class="cell-md-6 offset-md-3 offset-sm-1">
                <h3>Log in with</h3>
                <div class="tiles-grid">
                    <a href="<%=urls.discord%>" data-role="tile" data-size="medium" class="bg-indigo fg-white">
                        <span class="mif-discord icon"></span>
                        <span class="branding-bar">Discord</span>
                    </a>
                    <a href="<%=urls.google%>" data-role="tile" data-size="medium" class="bg-cobalt fg-white">
                        <span class="mif-google icon"></span>
                        <span class="branding-bar">Google</span>
                    </a>
                    <a href="#" data-role="tile" data-size="medium" class="bg-black fg-white">
                        <span class="mif-github icon"></span>
                        <span class="branding-bar">GitHub</span>
                    </a>
                    <a href="/framework/login?r=%2F" data-role="tile" data-size="medium" class="bg-grayBlue fg-white">
                        <span class="mif-key icon"></span>
                        <span class="branding-bar">Password</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>