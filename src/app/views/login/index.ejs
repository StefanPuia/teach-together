<%-include('partial/head')%>

<div class="container">
    <form method="POST">
        <div class="grid">
            <div class="row">
                <div class="cell-4 offset-4">
                    <h1>Teach Together</h1>
                </div>
                <% if(typeof error !== "undefined") { %>
                    <div class="cell-4 offset-4">
                        <div class="remark alert">
                            <%=error%>
                        </div>
                    </div>
                <%}%>
                <div class="cell-4 offset-4">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" required name="username" placeholder="User name" />
                    </div>
                </div>
                <div class="cell-4 offset-4">
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" required name="password" placeholder="Password" />
                    </div>
                </div>
                <div class="cell-4 offset-4">
                    <div class="form-group">
                        <input type="checkbox" name="remember" value="Y" data-role="checkbox" data-caption="Remember me">
                    </div>
                </div>
                <div class="cell-4 offset-4">
                    <div class="form-group">
                        <button class="button success">Log in</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>